
@{
    ViewBag.Title = "AdminLogin";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}
@using Mobile_Info.Models
@model AdminViewModel
@using (Html.BeginForm("AdminLogin", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="col-sm-9 padding-right">
        <div>
            <label for="Email">Email:</label>
            @Html.TextBox("Email", null, new { @class = "form-control", required = "required" })
        </div>
        <div>
            <label for="Password">Password:</label>
            @Html.TextBox("Password", null, new { @class = "form-control", required = "required" })
        </div>
        <div>
            <label>&nbsp;</label>
            <input type="submit" value="Login" class="submit" />
        </div>
        </div>
        }

